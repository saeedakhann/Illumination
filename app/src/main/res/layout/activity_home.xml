<?xml version="1.0" encoding="UTF-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="#F5F5F5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="10dp">

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="45dp"
                    android:id="@+id/progress_bar"
                    android:layout_centerHorizontal="true"
                    app:cpb_background_progressbar_color="@color/purple_200"
                    app:cpb_background_progressbar_width="20dp"
                    app:cpb_progressbar_color="@color/purple_700"
                    app:cpb_progressbar_width="15dp"
                    app:cpb_progress="60"/>
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/progress_bar2"
                    android:layout_centerHorizontal="true"
                    app:cpb_background_progressbar_color="@color/purple_200"
                    app:cpb_background_progressbar_width="20dp"
                    app:cpb_progressbar_color="@color/purple_700"
                    app:cpb_progressbar_width="15dp"
                    app:cpb_progress="60"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/forkknife"
                    android:layout_marginLeft="80dp"
                    >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1500"
                    android:textSize="20dp"
                    android:textColor="@color/purple_700"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/burned"
                    android:layout_marginLeft="100dp"
                    >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="350"
                    android:textSize="20dp"
                    android:textColor="@color/purple_700"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drop"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="@color/purple_700"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="110dp"/>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/IncrementButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:textSize="5sp">
            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/pyramid"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutrition Details"
                    android:id="@+id/food"
                    android:textSize="30dp"
                    android:textColor="@color/purple_700"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="110dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbohydrate"
                    android:textSize="14dp"
                    android:textColor="@color/purple_700"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textSize="14dp"
                    android:textColor="@color/purple_700"
                    />

            </LinearLayout>
            <ProgressBar
                android:id="@+id/pb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:progress="50"
                android:progressTint="@color/purple_700"
                android:progressBackgroundTint="@color/black"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:textSize="14dp"
                    android:textColor="@color/purple_700"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30%"
                    android:textSize="14dp"
                    android:textColor="@color/purple_700"
                    />

            </LinearLayout>
            <ProgressBar
                android:id="@+id/protein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:progress="30"
                android:progressTint="@color/purple_700"
                android:progressBackgroundTint="@color/black"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fat"
                    android:textSize="14dp"
                    android:textColor="@color/purple_700"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:textSize="14dp"
                    android:textColor="@color/purple_700"
                    />

            </LinearLayout>
            <ProgressBar
                android:id="@+id/fat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:progress="80"
                android:progressTint="@color/purple_700"
                android:progressBackgroundTint="@color/black"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metrics"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="@color/white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight:"
                android:layout_gravity="left"
                android:textSize="23dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="58"
                    android:layout_gravity="left"
                    android:textSize="23dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kgs"
                    android:layout_gravity="left"
                    android:textSize="23dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/colorAccent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI:"
                    android:layout_gravity="left"
                    android:textSize="23dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19.5"
                    android:layout_gravity="left"
                    android:textSize="23dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/colorAccent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity Level:"
                    android:layout_gravity="left"
                    android:textSize="23dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderate"
                    android:layout_gravity="left"
                    android:textSize="23dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>